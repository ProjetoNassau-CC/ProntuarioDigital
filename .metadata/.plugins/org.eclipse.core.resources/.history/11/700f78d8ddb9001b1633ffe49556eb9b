package dados;


import java.util.ArrayList;

import prontuario.Dentista;
import prontuario.Funcionario;
import prontuario.RepositorioFuncionario;

public class DentistaArrayList implements RepositorioFuncionario{
	private ArrayList<Dentista> DadosDentista;
		
	public DentistaArrayList() {		
		DadosDentista = new ArrayList<Dentista>();
	}
	
	public void inserir(Funcionario func) {
		DadosDentista.add((Dentista) func);
	}
	
	public Funcionario procurar(String cpf) {
		Funcionario resultado = null;
		for(Funcionario f : DadosDentista) {
			if(f.getCpf().equals(cpf)) {
				resultado = f;
			}
		}
		return resultado;
	}

	public void remover(String cpf) {	
		
		String mensagem = "Não foi possivel remover o usuario!";
		Funcionario resultado = null;
		for(Funcionario f : DadosDentista) {
			if(f.getCpf().equals(cpf)) {				
				resultado = f;
			    mensagem = f.getNome() + " Foi Removido com Sucesso!";									
			}			
		}
		if(resultado != null) {
			DadosDentista.remove(resultado);				
		} 				
		
		System.out.println(mensagem);		
	}
}