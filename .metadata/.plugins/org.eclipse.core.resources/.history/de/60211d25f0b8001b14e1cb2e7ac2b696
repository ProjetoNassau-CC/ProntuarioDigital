package dados;


import java.util.ArrayList;
import java.util.List;
import java.util.Scanner;

import prontuario.Dentista;
import prontuario.Funcionario;
import prontuario.RepositorioFuncionario;

public class RepositorioDentistaArrayList implements RepositorioFuncionario{
	Scanner input = new Scanner(System.in);
	//List<Dentista> DadosDentista = new ArrayList<Dentista>(); perguntar qual a diferença entre os 3 tipos
	//List<Dentista> DadosDentista;
	ArrayList<Dentista> DadosDentista = new ArrayList<Dentista>();

	
	public void inserir(Funcionario func) {
		DadosDentista.add((Dentista) func);
	}
	
	public Funcionario procurar(String cpf) {		
		Funcionario resultado = null;
		
		System.out.print("CPF: ");
		cpf = input.next();
		for(Dentista d : DadosDentista) {
			if(d.getCpf().equals(cpf)) {
				DadosDentista.toString();
			}		
		}
		return resultado;
	}


	public void remover(String cpf) {		
	}

}


