package prontuario;

import java.util.Locale;
import java.util.ArrayList;
import java.util.Scanner;

public class Main {


	public static void main(String[] args) {
		Scanner input = new Scanner(System.in);
		Locale.setDefault(Locale.US);
		int opcao;
		

		
		Ficha_tecnica fichaTecnica = new Ficha_tecnica();
	    Anamnese anamnese = new Anamnese();
	    
	   
		ArrayList<Dentista> Dadosdentista = new ArrayList<Dentista>();
		ArrayList<Paciente> dados = new ArrayList<Paciente>();
		
		
		
			
	
		boolean condicao = false;
		
		do {
			System.out.println("=-=-=-=-=-=-=-=-=-=-= Faça seu Loguin =-=-=-=-=-=-=-=-=-=-=");
	
			System.out.print("Login: ");
			String login = input.next();
			
			System.out.print("Senha: ");
			String senha = input.next();
			
			if (login.equals("admin") && senha.equals("1234")) {
				condicao = true;
			}
		
		}while(condicao != true);
			
		System.out.println("\n==========================================================");
		System.out.println("                 Login efetuado com sucesso");
		System.out.print("==========================================================");
	

		
		do {
			
			System.out.print("\n==========================================================");
			System.out.print(""
					+ "\n1- Dentista Atual"
					+ "\n2- Cadastrar Prontuario"
					+ "\n3- Exibir Prontuario"
					+ "\n4- Exibir Dados do Dentista "
					+ "\n5- Finalizar"
					+ "");
			System.out.println("\n==========================================================");
			System.out.print("O que deseja fazer? ");
			opcao = input.nextInt();
			System.out.println("==========================================================\n");
					
			
			switch(opcao) {	
			case 1:
				Dentista dent = new Dentista();
				Endereco end = new Endereco();


				System.out.println("\n==========================================================");
				System.out.println("XXXXXXXXXXXXXXXXXXXX Dados do Dentista XXXXXXXXXXXXXXXXXXX");	
				System.out.println("==========================================================\n");
				
				System.out.print("                   Dados do Dentista\n");
				
				System.out.print("Codigo: ");
				int D_codigo = input.nextInt();
				
				System.out.print("CRO: ");
				int D_cro = input.nextInt();
				
				System.out.print("Nome: ");
				String D_nome = input.next();
				
				System.out.print("Email: ");
				String D_email = input.next();
				
				System.out.print("Telefone: ");
				String D_tel = input.next();
				
				System.out.print("celular: ");
				String D_cel = input.next();
				
				System.out.print("Data de nascimento: ");
				String D_data_nascimento = input.next();
				
				System.out.print("CPF: ");				
				String D_cpf = input.next();
				
				System.out.print("RG: ");				
				String D_rg = input.next();
				
				System.out.println("\n                      Endereço\n");
				
				System.out.print("Rua: ");						
				end.setRua(input.next());	
				
				System.out.print("Bairro: ");
				end.setBairro(input.next());	
				
				System.out.print("CEP: ");
				end.setCep(input.next());	
				
				System.out.print("Cidade: ");
				end.setCidade(input.next());	
				
				System.out.print("UF: ");
				end.setUf(input.next());	
				
				System.out.print("Numero: ");
				end.setNumero(input.next());	
				
				System.out.print("Complemento: ");
				end.setComplemento(input.next());
				
					
				Dentista dentista = new Dentista(D_codigo, D_cro, D_nome, D_email, D_tel, D_cel, D_data_nascimento, D_cpf, D_rg, end);
				Dadosdentista.add(dentista);
				
				
				break;
			case 2:						
				Endereco endereco = new Endereco();
				
				System.out.println("\n==========================================================");
				System.out.println("XXXXXXXXXXXXXXXXXXXXXXX Prontuário XXXXXXXXXXXXXXXXXXXXXXX");	
				System.out.println("==========================================================\n");
				
				System.out.print("                   Dados do Paciente\n");
				
				System.out.print("Codigo: ");
				int P_codigo = input.nextInt();
			
				System.out.print("Nome: ");
				String P_nome = input.next();
			
				System.out.print("Email: ");
				String P_email = input.next();
				
				System.out.print("Telefone: ");
				String P_tel = input.next();
				
				System.out.print("Celular: ");
				String P_cel = input.next();
				
				System.out.print("Data de Nascimento: ");
				String P_data_nascimento = input.next();
				
				System.out.print("CPF: ");
				String P_cpf = input.next();
				
				System.out.print("RG: ");
				String P_rg = input.next();
				
				
				System.out.println("\n                      Endereço\n");
				
				System.out.print("Rua: ");
				endereco.setRua(input.next());	
				
				System.out.print("Bairro: ");
				endereco.setBairro(input.next());	
				
				System.out.print("CEP: ");
				endereco.setCep(input.next());	
				
				System.out.print("Cidade: ");
				endereco.setCidade(input.next());	
				
				System.out.print("UF: ");
				endereco.setUf(input.next());	
				
				System.out.print("Numero: ");
				endereco.setNumero(input.next());	
				
				System.out.print("Complemento: ");
				endereco.setComplemento(input.next());	
				
				Paciente pac;
				
				pac = new Paciente(P_codigo, P_nome, P_email, P_tel, P_cel, P_data_nascimento, P_cpf, P_rg, endereco);
				
				dados.add(pac);
				
				break;
				
			case 3:		
				System.out.print("Digite o CPF para Buscar: ");
				String buscarCpf = input.next();
				System.out.println("==========================================================");
				for (Paciente p : dados) {
					if(p.getCpf().equals(buscarCpf)) {
						System.out.println(p.toString());
					}
				}
				
				break;
				
			case 4:
				for (Dentista d : Dadosdentista) {
					System.out.println(d.toString());
					
				}
				break;
							
			}	
		
		}while(opcao != 0);
				
		input.close();
	}
	
}
